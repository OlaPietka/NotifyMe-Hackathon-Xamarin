<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp.View.CreateNewPasswordPage"
             xmlns:Custom="clr-namespace:MyApp.Custom">
    <ContentPage.Content>
        <StackLayout>
            <Custom:AppEntry x:Name="NewPassword" />
            
            <Label x:Name="LabelNewPassword"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" />

            <Custom:AppEntry x:Name="NewRepeatPassword" />

            <Button x:Name="ChangePassword"
                    Text="Zmien haslo"
                    Clicked="ChangePassword_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>